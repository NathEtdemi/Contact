<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.ContactFormPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <!-- Photo Section -->
                <Frame HeightRequest="150" WidthRequest="150" CornerRadius="75" 
                       BorderColor="Gray" VerticalOptions="Center" HorizontalOptions="Center"
                       HasShadow="False">
                    <Image Source="{Binding ImagePath}" 
                           Aspect="AspectFill" 
                           HeightRequest="150" 
                           WidthRequest="150" />
                </Frame>

                <Button Text="Ajouter une photo" 
                        Command="{Binding AddPhotoCommand}" 
                        BackgroundColor="#007ACC" 
                        TextColor="White" 
                        CornerRadius="5" />

                <!-- Input Fields -->
                <StackLayout Spacing="15">
                    <Entry Text="{Binding FirstName}" 
                           Placeholder="Prénom" 
                           FontSize="16" />

                    <Entry Text="{Binding LastName}" 
                           Placeholder="Nom" 
                           FontSize="16" />

                    <Entry Text="{Binding PhoneNumber}" 
                           Placeholder="Numéro" 
                           Keyboard="Telephone" 
                           FontSize="16" />

                    <Entry Text="{Binding Email}" 
                           Placeholder="E-mail" 
                           Keyboard="Email" 
                           FontSize="16" />

                    <Editor Text="{Binding Comment}" 
                            Placeholder="Commentaire (optionnel)" 
                            AutoSize="TextChanges" 
                            FontSize="16" 
                            HeightRequest="100" 
                            BackgroundColor="#F4F4F4" 
                            Margin="0,10,0,0" />
                </StackLayout>

                <!-- Save Button -->
                <Button Text="Enregistrer" 
                        Command="{Binding SaveCommand}" 
                        BackgroundColor="Green" 
                        TextColor="White" 
                        FontSize="16" 
                        CornerRadius="5" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
