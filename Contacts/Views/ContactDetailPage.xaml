<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.ContactDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifier" Command="{Binding EditCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <!-- Photo -->
                <Frame HeightRequest="150" WidthRequest="150" IsClippedToBounds="True" CornerRadius="75" HorizontalOptions="Center">
                    <Image Source="{Binding PhotoPath}" Aspect="AspectFill" />
                </Frame>

                <!-- Full Name -->
                <Label HorizontalTextAlignment="Center" FontSize="24" FontAttributes="Bold">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding FirstName}" />
                            <Span Text=" " />
                            <Span Text="{Binding LastName}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- Separator -->
                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="FillAndExpand" />

                <!-- Phone Number -->
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="Téléphone:" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding PhoneNumber}" FontSize="18" />
                </StackLayout>

                <!-- Email -->
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="Email:" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding Email}" FontSize="18" />
                </StackLayout>

                <!-- Comment -->
                <StackLayout>
                    <Label Text="Commentaire:" FontAttributes="Bold" FontSize="18" />
                    <Label Text="{Binding Comment}" FontSize="16" TextColor="Gray" />
                </StackLayout>

                <Button Text="Supprimer" 
                        Command="{Binding DeleteCommand}" 
                        BackgroundColor="Red" 
                        TextColor="White" 
                        FontSize="18" 
                        CornerRadius="5" 
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
